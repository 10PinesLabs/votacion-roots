<div class="row" style="background:lightgray">
  <div class="col s3">

    <h5>Asistentes</h5>

    {{#power-select-multiple
      options=usuariosSeleccionables
      selected=usuariosSeleccionados
      searchField="name"
      placeholder="Seleccione los asistentes a la reunión"
      noMatchesMessage="No more pinos"
      onchange=(action (mut usuariosSeleccionados))
    as |usuario|
    }}
      {{usuario.name}}
    {{/power-select-multiple}}

    <div class="card-action center-align con-padding">
      <a class="waves-effect waves-light btn" onclick={{action 'guardarUsuariosSeleccionados'}} >Agregar</a>
    </div>

  </div>

  <div class="col s9">

    <h5>Temas pendientes de minutear</h5>

    <table class="bordered highlight table">
      <tbody>
      {{#each  minuta.temas as |temaDeMinuta|}}
        <tr bgcolor='white' style="height:130px; width: 700px;">
          <div class="temaContent flex-center space-between">
            <div style="margin-right: 20px;">
              <td class="noPadding" {{action 'verEditorDeConclusion' temaDeMinuta}} style="width: 430px;">
                <h5 class="titulo-de-tema">{{temaDeMinuta.tema.titulo}}</h5>
                <p class="crop" style="height: 200px;     overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    line-height: 1.20;
    max-height: 70px;">{{markdown-view
                  value=temaDeMinuta.tema.descripcion}}</p>
              </td>

              {{# if mostrandoEditor}}
                {{editor-de-conclusion
                  alGuardar=(action 'guardarConclusion')
                  alCerrar=(action 'cerrarEditor')
                  temaDeMinuta=temaAEditar
                  usuarios=model.usuarios
                }}
              {{/if}}
            </div>

            <div style="width: 200px;">
              <h6 style="text-align: center"> ¿Fue tratado?</h6>
              <div class="space-between">
                <button type="button" {{action ''}} class="btn-flat bold btn">
                  <h6 class="bold"> SI</h6>
                </button>
                <button type="button" {{action ''}} class="btn-flat bold secondary">
                  <h6 class="bold"> NO </h6>
                </button>
              </div>
            </div>

          </div>
        </tr>
      {{/each}}
      </tbody>
    </table>

    <div>
      <h5>Temas tratados</h5>
    </div>
    <div>
      <h5>Temas dejados afuera</h5>
    </div>

    {{# if mostrandoEditor}}
      {{editor-de-conclusion
        alGuardar=(action 'guardarConclusion')
        alCerrar=(action 'cerrarEditor')
        temaDeMinuta=temaAEditar
        usuarios=model.usuarios
      }}
    {{/if}}
  </div>
</div>